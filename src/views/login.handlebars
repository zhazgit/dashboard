
 <div class="content">
     <div class="text-center">
     <img class="logo" src="/img/logo.png" alt="" srcset="" width="300px" height="300px"> 
     </div>
   
 <div class="registration-form">
        <form>
            <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
                <img src="/img/user.jpg" alt="" srcset="" width="70px" height="70px">
            </div>
            <div class="form-group">
                <input type="email" class="form-control item" id="email" placeholder="E-mail">
            </div>
            <div class="form-group">
                <input type="password" class="form-control item" id="password" placeholder="Senha">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-block create-account">Entrar</button>
            </div>
        </form>
        <div class="social-media">
            <h6><a href="#"><i class="icon-directions" title="Sua Localização"></i></a> IP: {{ip}} </h6>
            <h6><a href="#"><i class="icon-location-pin" title="Sua Localização"></i></a>  Cidade: {{city}} - {{region}}</h6>
        </div>
    </div>
</div>
   